<!--pets.hbs-->
<h2>Pets</h2>

{{!-- Pets Table --}}
<table id="pets-table">
    <thead>

        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr data-value={{this.petID}}>
            <td>{{this.petID}}</td>
            <td>{{this.pet_name}}</td>
            <td>{{this.ownerID}}</td>
            <td>{{this.pet_typeID}}</td>
            <td>{{this.breed}}</td>
            <td>{{this.birthdate}}</td>
            <td><button onclick="deletePet({{this.petID}})">Delete</button>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_pet.js"></script>

{{!-- Search form --}}
<div id="search-pets">
<form id="search-pet" method='GET' action='/pets'>
<legend>Search Pets</legend>
<fieldset>
<p>Search by pet name using the field below. Partial pet names are ok!</p>
    <label for="input-pet_name"> Search by Pet Name: </label>
    <input type="text" name="pet_name" id="input-pet_name-search">

    <input type="submit" value="search">
    <a href='/pets'><button>Reset</button></a>
    </fieldset>
</form>
</div>

{{!-- Add Pet Form IN FORM HEADER AFTER ID: method="POST" action="/add-pet-form" --}}
<div id="add-pet">
<form id="add-pet-form">
<legend>Add a Pet</legend>
<fieldset>
<p>please enter info and click submit</p>

     <label for="input-pet_name">Pet Name: </label>
    <input type="text" name="input-pet_name" id="input-pet_name">

    <label for="input-ownerID">Owner: </label>
    <select name="input-ownerID" id="input-ownerID">
        <option value="">Select Owner</option>
        {{#each owners}}
        <option value="{{this.ownerID}}">{{this.owner_name}}</option>
        {{/each}}
    </select>

    <label for="input-pet_typeID">Pet Type: </label>
    <select name="input-pet_typeID" id="input-pet_typeID">
        <option value="">Select Pet Type</option>
        {{#each pet_types}}
        <option value="{{this.pet_typeID}}">{{this.type_name}}</option>
        {{/each}}
    </select>

    <label for="input-breed">Breed: </label>
    <input type="text" name="input-breed" id="input-breed">

    <label for="input-birthdate">Birthdate: </label>
    <input type="date" name="input-birthdate" id="input-birthdate">

    <input type="submit" value="Add Pet">
    </fieldset>
</form>
</div>

{{!-- Update Pet Form --}}
<div id="update-pet">
    <form id="update-pet-form">
        <legend>Update a Pet</legend>
        <fieldset>
<p>To update a Pet, select their name from the drop down menu.</p>

    <label for="input-pet_name">Pet's Name: </label>
    <select name="input-pet_name" id="petSelect">
        <option value="test">Select a Pet</option>
        {{#each data}}
        <option value="{{this.petID}}">{{this.pet_name}}</option>
        {{/each}}
    </select>

    <label for="input-pet_type">Pet Type: </label>
    <select name="input-pet_type" id="input-pet_type-update">
        <option>select pet type</option>
        {{#each pet_types}}
        <option value="{{this.pet_typeID}}">{{this.type_name}}</option>
        {{/each}}
    </select>
    <input type="submit" value="Update Pet">
</form>
</fieldset>
</div>
<script src="./js/update_pet.js"></script>