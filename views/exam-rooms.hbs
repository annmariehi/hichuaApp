<!--exam-rooms.hbs-->

{{!-- script to highlight current tab in nav bar --}}
<script>
  var element = document.getElementById("examRoomsNav");
  element.classList.add("active");
</script>

{{!-- Exam Rooms Table --}}
<h2>Exam Rooms</h2>
      <table>
        <thead>
          <tr>
            <th>Exam Room IDs</th>
          </tr>
        </thead>
        <tbody>
          {{#each examRoomData}}
          <tr>
            <td>{{this.exam_roomID}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>

{{!-- Add Exam Room Form --}}
    <div id="add-exam-room">
      <form id="add-exam-room-form" method="POST" action="/add-exam-room-form">
        <legend>Add Exam Room</legend>
        <fieldset>
          <label>Exam Room Number: </label>
          <input type="number" name="insert-exam_roomID" id="insert-exam_roomID">
          <input type="submit" value="Add Exam Room">
        </fieldset>
      </form>
    </div>