<!--exam-rooms.hbs-->

{{!-- script to highlight current tab in nav bar --}}
<script>
  var element = document.getElementById("examRoomsNav");
  element.classList.add("active");
</script>

<div class="pageTitle">
<h2>Exam Rooms</h2>
</div>

<div class="tables">
{{!-- Exam Rooms Table --}}

      <table>
        <thead>
          <tr>
            <th>Exam Room IDs</th>
          </tr>
        </thead>
        <tbody>
          {{#each examRoomData}}
          <tr>
            <td>{{this.exam_roomID}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
</div>

<div class="forms">
      <div class="tab">
        <button class="tablinks" onclick="openForm(event, 'addForm')">Add Exam Room</button>
    </div>
    <script src="./js/tabs.js"></script>

    <div id="addForm" class="tabContent">
{{!-- Add Exam Room Form --}}
      <form class="addForm" id="add-exam-room-form" method="POST" action="/add-exam-room-form">
          <label>Exam Room Number: </label>
          <input type="number" name="insert-exam_roomID" id="insert-exam_roomID">
          <input type="submit" value="Add Exam Room">
      </form>
    </div>
    </div>